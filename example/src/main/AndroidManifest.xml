<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.tutti.android.bottomsheet.example">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BottomSheetExampleLightActivity"
            android:theme="@style/AppTheme.BottomSheet.Light"
            android:finishOnCloseSystemDialogs="true"
            android:excludeFromRecents="true"
            android:documentLaunchMode="never"
            android:relinquishTaskIdentity="true" />

        <activity
            android:name=".BottomSheetExampleActivity"
            android:theme="@style/AppTheme.BottomSheet"
            android:finishOnCloseSystemDialogs="true"
            android:excludeFromRecents="true"
            android:documentLaunchMode="never"
            android:relinquishTaskIdentity="true" />

        <activity
            android:name="ch.tutti.android.bottomsheet.BottomSheetChooserActivity"
            android:theme="@style/BottomSheet.Light"
            android:finishOnCloseSystemDialogs="true"
            android:excludeFromRecents="true"
            android:documentLaunchMode="never"
            android:relinquishTaskIdentity="true" />

        <activity
            android:name=".BottomSheetCustomChooserActivity"
            android:theme="@style/BottomSheet"
            android:finishOnCloseSystemDialogs="true"
            android:excludeFromRecents="true"
            android:documentLaunchMode="never"
            android:relinquishTaskIdentity="true" />
    </application>
</manifest>
